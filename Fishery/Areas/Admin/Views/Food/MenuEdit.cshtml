@model Fishery.Areas.Controllers.FoodMenuPageModel

<style>
    .content-wrapper {
        margin-left: 250px;
    }
</style>

<h2>編輯菜色</h2>

<form asp-action="MenuSave" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="menu.Id" />
    <input type="hidden" asp-for="menu.FoodId" />
    <input type="hidden" asp-for="menu.Pic1" />
    <div class="form-group">
        <label>菜色名稱</label><input class="form-control" asp-for="menu.Name" />
    </div>
    <div class="form-group">
        <label>選單照片,請上傳 寬1080px高630px圖片</label>
        <p>
            <img class="w-50" src="~/images/foods/@(Model.menu.Pic1)">
        </p>
        <input type="file" asp-for="pic" accept="image/*" />
    </div>
    <div class="form-group">
        <label>餐廳描述</label><input class="form-control" asp-for="menu.Desc" />
    </div>

    <input type="submit" value="儲存" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-success">返回列表</a>
</form>