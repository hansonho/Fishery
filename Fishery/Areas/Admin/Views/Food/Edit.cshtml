@model Fishery.Areas.Admin.Controllers.FoodPageModel


<h2>編輯餐廳</h2>

<form asp-action="Save" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="food.Id" />
    <input type="hidden" asp-for="food.Cover" />
    <div class="form-group">
        <label>餐廳名稱</label><input class="form-control" asp-for="food.Name" />
    </div>
    <div class="form-group">
        <label>選單照片,請上傳 寬933px高215px圖片</label>
        <p>
            <img class="w-50" src="~/images/foods/@(Model.food.Cover)">
        </p>
        <input type="file" asp-for="coverImage" accept="image/*" />
    </div>
    <div class="form-group">
        <label>餐廳描述</label><input class="form-control" asp-for="food.Desc" />
    </div>
    <div class="form-group">
        <label>排序號</label><input class="form-control" asp-for="food.Seq" />
    </div>

    <input type="submit" value="儲存" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-success">返回列表</a>
</form>

@section Scripts
{
    <script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $(input).prev().find("img").attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]); // convert to base64 string
        }
    }

    $("input[type='file']").change(function () {
        readURL(this);
    });
    </script>
}